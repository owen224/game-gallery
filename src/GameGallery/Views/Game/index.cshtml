@model GameGallery.Models.Game[]

@{
    ViewBag.Title = "Games";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var game in Model)
    {
    <div class="col-md-3">
        <h4>@game.DisplayText</h4>
        <img src="~/Images/@game.CoverImageFileName"
             alt="@game.DisplayText"
             class="img-responsive" />
    
    </div>
    }
</div>

